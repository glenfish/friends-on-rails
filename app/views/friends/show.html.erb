<div class="jumbotron">
  <p class="display-4">
    
    <%= @friend.first_name + " " + @friend.last_name %>
  </p>
  <hr class="my-4">
  <p>
    <%= @friend.phone %> &nbsp;|&nbsp; <%= @friend.email %> &nbsp;|&nbsp; <%= @friend.twitter %>
  </p>

</div>

<%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %>
<%= link_to 'Delete', @friend, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Show All', friends_path, class: "btn btn-dark" %>
